{
  "extends": [
    "dcl-tslint-config-standard"
  ],
  "rules": {
    "quotemark": false,
    "no-console": true,
    "ban-types": [
      true,
      "Number",
      "Boolean",
      "String",
      "Object"
    ],
    "no-parameter-reassignment": true
  },
  "linterOptions": {
    "exclude": [
      "packages/engine/vendor/**",
      "test/**",
      "packages/shared/dao/contracts/*"
    ]
  }
}